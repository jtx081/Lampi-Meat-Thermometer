#:kivy 1.9
#:import hex kivy.utils.get_color_from_hex
#:import Factory kivy.factory.Factory

<InfoPopup@Popup>
  auto_dismiss: False
  title: "Information"
  BoxLayout:
    orientation: 'vertical'
    Label:
      text: "Meat Type: ____"
    Label:
      text: app.display_target_temp
    Button:
      size_hint_y: 0.3
      text: "close"
      on_release: root.dismiss()

<DonePopup>
  Label:
    text: "done!" + app.display_text
    pos_hint:{"x": 0, "top": 1}

BoxLayout:
  orientation: 'vertical'
  canvas.before:
    Color:
      rgba: hex('#A52A2A')
    Rectangle:
      pos: self.pos
      size: self.size
  Label:
    size_hint_y: 0.3
    font_size: 25
    bold: True
    text: 'Meat Temperature:'
  Label:
    size_hint_y: 0.6
    bold: True
    font_size: 50
    text: app.display_text
  Button:
    size_hint_y: 0.1
    text: "Meat Setting Details"
    on_release: Factory.InfoPopup().open()
